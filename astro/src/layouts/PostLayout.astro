---
import Footer from "../components/Footer.astro";
import Menu from "../components/Menu.astro";
import { BANNER, ROBOTS_CHECK, THEME_COLOR, TITLE_SITE } from "../consts";
import "../styles/global.css";

export interface Props {
 title?: string | undefined;
 desc?: string | undefined;
 poster?: string | undefined;
}

const verification_yandex = "";
const verification_google = "";

const title = Astro.props.title || TITLE_SITE;
const { desc, poster } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
 <head>
  <meta charset="UTF-8" />
  <link rel="manifest" href="manifest.json" />

  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="application-name" content="Проксимилиатор" />
  <meta name="apple-mobile-web-app-title" content="Проксимилиатор" />
  <meta name="theme-color" content={THEME_COLOR} />
  <meta name="msapplication-navbutton-color" content={THEME_COLOR} />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <meta name="msapplication-starturl" content="/" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <meta name="generator" content={Astro.generator} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

 <link rel="icon" type="image/svg+xml" href="/favicons/icon.svg" />
  <link
   rel="apple-touch-icon"
   type="image/png"
   sizes="167x167"
   href="/icons/icon-167x167.png"
  />
  <link
   rel="apple-touch-icon"
   type="image/png"
   sizes="180x180"
   href="/icons/icon-180x180.png"
  />

  <link rel="shortcut icon" sizes="48x48" href="/icons/icon-48x48.png" type="image/png">
  <link rel="shortcut icon" sizes="72x72" href="/icons/icon-72x72.png" type="image/png">
  <link rel="shortcut icon" sizes="96x96" href="/icons/icon-96x96.png" type="image/png">
  <link rel="shortcut icon" sizes="128x128" href="/icons/icon-128x128.png" type="image/png">
  <link rel="shortcut icon" sizes="144x144" href="/icons/icon-144x144.png" type="image/png">
  <link rel="shortcut icon" sizes="152x152" href="/icons/icon-152x152.png" type="image/png">
  <link rel="shortcut icon" sizes="192x192" href="/icons/icon-192x192.png" type="image/png">
  <link rel="shortcut icon" sizes="384x384" href="/icons/icon-384x384.png" type="image/png">
  <link rel="shortcut icon" sizes="512x512" href="/icons/icon-512x512.png" type="image/png">

  <meta name="yandex-verification" content={verification_yandex} />
  <meta name="google-site-verification" content={verification_google} />

  <meta name="robots" content={ROBOTS_CHECK} />
  <link rel="canonical" href={Astro.url} />

  <meta property="og:type" content="article" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:site_name" content={title} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={desc} />
  <meta property="og:image" content={Astro.site + BANNER || poster} />
  <meta property="og:image:type" content="image/png" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@all_groups_12" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={desc} />
  <meta name="twitter:image" content={Astro.site + BANNER || poster} />
  <title>{title}</title>
 </head>
 <body>
  <main class="_main">
   <div class="container mx-auto px-[20px]">
    <div class="mt-[0px] md:mt-[80px]"></div>
    <Menu />
    <slot />
   </div>
   <Footer />
  </main>
 </body>
</html>
