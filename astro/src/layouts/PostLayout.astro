---
import Footer from "../components/Footer.astro";
import Menu from "../components/Menu.astro";
import { BANNER, ROBOTS_CHECK, THEME_COLOR, TITLE_SITE } from "../consts";
import "../styles/global.css";

export interface Props {
 title?: string | undefined;
 desc?: string | undefined;
 poster?: string | undefined;
}

const verification_yandex = "";
const verification_google = "";

const title = Astro.props.title || TITLE_SITE;
const { desc, poster } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
 <head>
  <meta charset="UTF-8" />
  <link rel="manifest" href="manifest.json" />

  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="application-name" content="Проксимилиатор" />
  <meta name="apple-mobile-web-app-title" content="Проксимилиатор" />
  <meta name="theme-color" content={THEME_COLOR} />
  <meta name="msapplication-navbutton-color" content={THEME_COLOR} />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <meta name="msapplication-starturl" content="/" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <meta name="generator" content={Astro.generator} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <link rel="icon" type="image/svg+xml" href="/favicons/icon.svg" />
  <link
   rel="apple-touch-icon"
   type="image/png"
   sizes="167x167"
   href="/favicons/icon-167.png"
  />
  <link
   rel="apple-touch-icon"
   type="image/png"
   sizes="180x180"
   href="/favicons/icon-180.png"
  />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicons/icon-32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicons/icon-16.png" />
  <link rel="icon" type="image/png" sizes="48x48" href="/favicons/icon-48.png" />
  <link rel="icon" type="image/png" sizes="192x192" href="/favicons/icon-192.png" />

  <meta name="yandex-verification" content={verification_yandex} />
  <meta name="google-site-verification" content={verification_google} />

  <meta name="robots" content={ROBOTS_CHECK} />
  <link rel="canonical" href={Astro.url} />

  <meta property="og:type" content="article" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:site_name" content={title} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={desc} />
  <meta property="og:image" content={Astro.site + BANNER || poster} />
  <meta property="og:image:type" content="image/png" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@all_groups_12" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={desc} />
  <meta name="twitter:image" content={Astro.site + BANNER || poster} />
  <title>{title}</title>
 </head>
 <body>
  <main class="_main">
   <div class="container mx-auto px-[20px]">
    <div class="mt-[0px] md:mt-[80px]"></div>
    <Menu />
    <slot />
   </div>
   <Footer />
  </main>
 </body>
</html>
