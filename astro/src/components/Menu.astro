---
import Link from "./Link.astro";
export const link = "p-[6px] rounded-[10px] mr-[10px] last:mr-[0px]";
---

<div class="flex items-start flex-col">
 <div
  class="xl:hidden flex items-center text-[#666] font-medium mt-[15px] lg:mt-[30px] bg-[#efefef] py-[5px] px-[10px] rounded-[10px]"
  id="open-menu"
 >
  <svg
   class="mr-[5px] fill-[#666]"
   width="20"
   height="20"
   viewBox="0 0 20 20"
   fill="none"
   xmlns="http://www.w3.org/2000/svg"
  >
   <path
    d="M3.33333 15H16.6667C17.125 15 17.5 14.625 17.5 14.1667C17.5 13.7083 17.125 13.3333 16.6667 13.3333H3.33333C2.875 13.3333 2.5 13.7083 2.5 14.1667C2.5 14.625 2.875 15 3.33333 15ZM3.33333 10.8333H16.6667C17.125 10.8333 17.5 10.4583 17.5 10C17.5 9.54167 17.125 9.16667 16.6667 9.16667H3.33333C2.875 9.16667 2.5 9.54167 2.5 10C2.5 10.4583 2.875 10.8333 3.33333 10.8333ZM2.5 5.83333C2.5 6.29167 2.875 6.66667 3.33333 6.66667H16.6667C17.125 6.66667 17.5 6.29167 17.5 5.83333C17.5 5.375 17.125 5 16.6667 5H3.33333C2.875 5 2.5 5.375 2.5 5.83333Z"
    fill="black"></path>
  </svg>
  Меню
 </div>
</div>

<div id="menu" class="hidden xl:flex mx-auto justify-center mt-[15px] xl:mt-[0px]">
 <div
  class="mr-[0] xl:mr-[20px] flex flex-col xl:flex-row p-[8px] rounded-[10px] bg-[#FBFBFF]"
 >
  <Link href="/" class={link}>🏠 Главная</Link>
  <Link href="/guide" class={link}>📰 Руководства</Link>
 </div>
 <div
  class="mr-[0] xl:mr-[20px] mt-[20px] xl:mt-[0px] flex flex-col lg:flex-row p-[8px] rounded-[10px] bg-[#FBFBFF]"
 >
  <Link href="/about" class={link}>👥 О нас</Link>
  <Link href="/groups" class={link}>🫂 Собрания</Link>
  <Link href="/questions" class={link}>💭 Вопросы&Ответы</Link>
 </div>
 <div
  class="mt-[20px] xl:mt-[0px] flex flex-col xl:flex-row p-[8px] rounded-[10px] bg-[#FBFBFF]"
 >
  <Link href="/devs/" class={link}>💻 Разработчикам</Link>
  <Link href="/blog" class={link}>📘 Заметки</Link>
 </div>
</div>

<script lang="js">
 const menu = document.querySelector("#menu");
 const menu_open = document.querySelector("#open-menu");
 const isHidden = false;

 if (!isHidden) {
  menu_open.addEventListener("click", () => {
   menu.classList.toggle("hidden");
  });
 }
</script>
